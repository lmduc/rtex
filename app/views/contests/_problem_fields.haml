.nested-fields
  .form-group
    = f.label :title, class: 'control-label col-sm-2'
    .col-sm-10
      = f.text_field :title, class: 'form-control'

  .form-group
    = f.label :description, class: 'control-label col-sm-2'
    .col-sm-10
      = f.text_area :description, class: 'form-control', row: 4

  = link_to_remove_association "Remove", f, class: 'btn btn-warning'
